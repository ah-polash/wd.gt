{
    "name": "Local Weather",
    "description": "https://raw.githubusercontent.com/ah-polash/wd.gt/main/another.json",
    "version": 1,
    "data": {
      "content_url": "https://example.com",
      "weather_city": "Seattle",
      "weather_temp": "description.weather_temp",
      "weather_icon": "https://.../sunny.png"
    },
    "layouts": {
      "small_temp": {
        "size": "small",
        "styles": {
          "colors": {
            "background_gradient": {
              "color": "linear-gradient(0deg, #76A5D5, #2469AA)"
            },
            "city_text_color": {
              "color": "#FFFFFFAA"
            }
          },
          "fonts": {
            "cool_font": {
              "family": "Chalkduster"
            }
          }
        },
        "layers": [
          {
            "rows": [
              {
                "height": 12,
                "cells": [
                  {
                    "width": 12,
                    "background_color_style": "background_gradient"
                  }
                ]
              }
            ]
          },
          {
            "rows": [
              {
                "height": 1
              },
              {
                "height": 1.5,
                "cells": [
                  {
                    "padding": 1.25,
                    "width": 12,
                    "text": {
                      "data_ref": "weather_city",
                      "size": 12,
                      "font_style": "cool_font",
                      "color_style": "city_text_color",
                      "justification": "left"
                    }
                  }
                ]
              },
              {
                "height": 0.25
              },
              {
                "height": 3.5,
                "cells": [
                  {
                    "padding": 1,
                    "width": 12,
                    "text": {
                      "data_ref": "weather_temp",
                      "size": 50,
                      "font_style": "cool_font",
                      "weight": "light",
                      "justification": "left"
                    }
                  }
                ]
              },
              {
                "height": 1.5
              },
              {
                "height": 3,
                "cells": [
                  {
                    "padding": 1.15,
                    "width": 4,
                    "image": {
                      "data_ref": "weather_icon"
                    }
                  },
                  {
                    "width": 8
                  }
                ]
              },
              {
                "height": 1.0
              }
            ]
          }
        ]
      }
    }
  }